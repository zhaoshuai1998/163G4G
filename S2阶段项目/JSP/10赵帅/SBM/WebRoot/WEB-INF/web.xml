<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>SBM</display-name>
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>com.zs.sbm.user.servlet.UserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ProviderServlet</servlet-name>
		<servlet-class>com.zs.sbm.provider.servlet.ProviderServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AccountServlet</servlet-name>
		<servlet-class>com.zs.sbm.account.servlet.AccountServlet</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>GoodsServlet</servlet-name>
    <servlet-class>com.zs.sbm.goods.servlet.GoodsServlet</servlet-class>
  </servlet>

	<filter>
		<filter-name>EncodeFilter</filter-name>
		<filter-class>com.zs.sbm.common.fiter.EncodeFilter</filter-class>
	</filter>


	<filter-mapping>
		<filter-name>EncodeFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProviderServlet</servlet-name>
		<url-pattern>/provider</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccountServlet</servlet-name>
		<url-pattern>/account</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>GoodsServlet</servlet-name>
    <url-pattern>/goods</url-pattern>
  </servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<listener>
		<listener-class>com.zs.sbm.common.listener.ApplicationListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.zs.sbm.common.listener.ExitListener</listener-class>
	</listener>
</web-app>